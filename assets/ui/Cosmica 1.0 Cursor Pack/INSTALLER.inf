; This installer is an INF file (setup information file) that allows the installation of a cursor scheme through right-click > Install

; Required section/value for this to work
[Version]
signature="$CHICAGO$"

; Copy cursors to DefaultDestDir defined in DestinationDirs section below
; Create new cursor scheme (in registry)
[DefaultInstall]
CopyFiles = CursorFileNames.Blue, CursorFileNames.Green, CursorFileNames.Orange, CursorFileNames.Pink
AddReg = CursorSchemeRegisteryEntry.Blue, CursorSchemeRegisteryEntry.Green, CursorSchemeRegisteryEntry.Orange, CursorSchemeRegisteryEntry.Pink

; 10 => Windows directory (%SystemRoot%) + subdirectory as defined in Strings section
[DestinationDirs]
DefaultDestDir = 10,"%CursorSchemeDirectory%"

; Definition of the cursor scheme registry entry (which is what is created when a scheme is manually saved in Mouse Properties)
[CursorSchemeRegisteryEntry.Blue]
HKCU,"Control Panel\Cursors\Schemes","%CursorSchemeName% Blue",0x00020000,"%SYSTEMROOT%\%CursorSchemeDirectory%\Cosmica Blue\%Arrow%,%SYSTEMROOT%\%CursorSchemeDirectory%\Cosmica Blue\%Help%,%SYSTEMROOT%\%CursorSchemeDirectory%\Cosmica Blue\%AppStarting%,%SYSTEMROOT%\%CursorSchemeDirectory%\Cosmica Blue\%Wait%,%SYSTEMROOT%\%CursorSchemeDirectory%\Cosmica Blue\%Crosshair%,%SYSTEMROOT%\%CursorSchemeDirectory%\Cosmica Blue\%IBeam%,%SYSTEMROOT%\%CursorSchemeDirectory%\Cosmica Blue\%NWPen%,%SYSTEMROOT%\%CursorSchemeDirectory%\Cosmica Blue\%No%,%SYSTEMROOT%\%CursorSchemeDirectory%\Cosmica Blue\%SizeNS%,%SYSTEMROOT%\%CursorSchemeDirectory%\Cosmica Blue\%SizeWE%,%SYSTEMROOT%\%CursorSchemeDirectory%\Cosmica Blue\%SizeNWSE%,%SYSTEMROOT%\%CursorSchemeDirectory%\Cosmica Blue\%SizeNESW%,%SYSTEMROOT%\%CursorSchemeDirectory%\Cosmica Blue\%SizeAll%,%SYSTEMROOT%\%CursorSchemeDirectory%\Cosmica Blue\%UpArrow%,%SYSTEMROOT%\%CursorSchemeDirectory%\Cosmica Blue\%Hand%,%SYSTEMROOT%\%CursorSchemeDirectory%\Cosmica Blue\%Pin%,%SYSTEMROOT%\%CursorSchemeDirectory%\Cosmica Blue\%Person%"

[CursorSchemeRegisteryEntry.Green]
HKCU,"Control Panel\Cursors\Schemes","%CursorSchemeName% Green",0x00020000,"%SYSTEMROOT%\%CursorSchemeDirectory%\Cosmica Green\%Arrow%,%SYSTEMROOT%\%CursorSchemeDirectory%\Cosmica Green\%Help%,%SYSTEMROOT%\%CursorSchemeDirectory%\Cosmica Green\%AppStarting%,%SYSTEMROOT%\%CursorSchemeDirectory%\Cosmica Green\%Wait%,%SYSTEMROOT%\%CursorSchemeDirectory%\Cosmica Green\%Crosshair%,%SYSTEMROOT%\%CursorSchemeDirectory%\Cosmica Green\%IBeam%,%SYSTEMROOT%\%CursorSchemeDirectory%\Cosmica Green\%NWPen%,%SYSTEMROOT%\%CursorSchemeDirectory%\Cosmica Green\%No%,%SYSTEMROOT%\%CursorSchemeDirectory%\Cosmica Green\%SizeNS%,%SYSTEMROOT%\%CursorSchemeDirectory%\Cosmica Green\%SizeWE%,%SYSTEMROOT%\%CursorSchemeDirectory%\Cosmica Green\%SizeNWSE%,%SYSTEMROOT%\%CursorSchemeDirectory%\Cosmica Green\%SizeNESW%,%SYSTEMROOT%\%CursorSchemeDirectory%\Cosmica Green\%SizeAll%,%SYSTEMROOT%\%CursorSchemeDirectory%\Cosmica Green\%UpArrow%,%SYSTEMROOT%\%CursorSchemeDirectory%\Cosmica Green\%Hand%,%SYSTEMROOT%\%CursorSchemeDirectory%\Cosmica Green\%Pin%,%SYSTEMROOT%\%CursorSchemeDirectory%\Cosmica Green\%Person%"

[CursorSchemeRegisteryEntry.Orange]
HKCU,"Control Panel\Cursors\Schemes","%CursorSchemeName% Orange",0x00020000,"%SYSTEMROOT%\%CursorSchemeDirectory%\Cosmica Orange\%Arrow%,%SYSTEMROOT%\%CursorSchemeDirectory%\Cosmica Orange\%Help%,%SYSTEMROOT%\%CursorSchemeDirectory%\Cosmica Orange\%AppStarting%,%SYSTEMROOT%\%CursorSchemeDirectory%\Cosmica Orange\%Wait%,%SYSTEMROOT%\%CursorSchemeDirectory%\Cosmica Orange\%Crosshair%,%SYSTEMROOT%\%CursorSchemeDirectory%\Cosmica Orange\%IBeam%,%SYSTEMROOT%\%CursorSchemeDirectory%\Cosmica Orange\%NWPen%,%SYSTEMROOT%\%CursorSchemeDirectory%\Cosmica Orange\%No%,%SYSTEMROOT%\%CursorSchemeDirectory%\Cosmica Orange\%SizeNS%,%SYSTEMROOT%\%CursorSchemeDirectory%\Cosmica Orange\%SizeWE%,%SYSTEMROOT%\%CursorSchemeDirectory%\Cosmica Orange\%SizeNWSE%,%SYSTEMROOT%\%CursorSchemeDirectory%\Cosmica Orange\%SizeNESW%,%SYSTEMROOT%\%CursorSchemeDirectory%\Cosmica Orange\%SizeAll%,%SYSTEMROOT%\%CursorSchemeDirectory%\Cosmica Orange\%UpArrow%,%SYSTEMROOT%\%CursorSchemeDirectory%\Cosmica Orange\%Hand%,%SYSTEMROOT%\%CursorSchemeDirectory%\Cosmica Orange\%Pin%,%SYSTEMROOT%\%CursorSchemeDirectory%\Cosmica Orange\%Person%"

[CursorSchemeRegisteryEntry.Pink]
HKCU,"Control Panel\Cursors\Schemes","%CursorSchemeName% Pink",0x00020000,"%SYSTEMROOT%\%CursorSchemeDirectory%\Cosmica Pink\%Arrow%,%SYSTEMROOT%\%CursorSchemeDirectory%\Cosmica Pink\%Help%,%SYSTEMROOT%\%CursorSchemeDirectory%\Cosmica Pink\%AppStarting%,%SYSTEMROOT%\%CursorSchemeDirectory%\Cosmica Pink\%Wait%,%SYSTEMROOT%\%CursorSchemeDirectory%\Cosmica Pink\%Crosshair%,%SYSTEMROOT%\%CursorSchemeDirectory%\Cosmica Pink\%IBeam%,%SYSTEMROOT%\%CursorSchemeDirectory%\Cosmica Pink\%NWPen%,%SYSTEMROOT%\%CursorSchemeDirectory%\Cosmica Pink\%No%,%SYSTEMROOT%\%CursorSchemeDirectory%\Cosmica Pink\%SizeNS%,%SYSTEMROOT%\%CursorSchemeDirectory%\Cosmica Pink\%SizeWE%,%SYSTEMROOT%\%CursorSchemeDirectory%\Cosmica Pink\%SizeNWSE%,%SYSTEMROOT%\%CursorSchemeDirectory%\Cosmica Pink\%SizeNESW%,%SYSTEMROOT%\%CursorSchemeDirectory%\Cosmica Pink\%SizeAll%,%SYSTEMROOT%\%CursorSchemeDirectory%\Cosmica Pink\%UpArrow%,%SYSTEMROOT%\%CursorSchemeDirectory%\Cosmica Pink\%Hand%,%SYSTEMROOT%\%CursorSchemeDirectory%\Cosmica Pink\%Pin%,%SYSTEMROOT%\%CursorSchemeDirectory%\Cosmica Pink\%Person%"


